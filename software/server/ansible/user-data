#cloud-config

# This is the user-data configuration file for cloud-init. By default this sets
# up an initial user called "ubuntu" with password "ubuntu", which must be
# changed at first login. However, many additional actions can be initiated on
# first boot from this file. The cloud-init documentation has more details:
#
# https://cloudinit.readthedocs.io/
#

# Set your hostname here, the manage_etc_hosts will update the hosts file entries as well
hostname: labpass

timezone: America/Los_Angeles

# Enable password authentication with the SSH daemon
ssh_pwauth: true

## Add users and groups to the system, and import keys with the ssh-import-id
users:
- name: ansible
  primary-group: users
  shell: /bin/bash
  sudo: ALL=(ALL) NOPASSWD:ALL
  passwd: 
  groups: users,adm,dialout,audio,plugdev,netdev,video
  lock_passwd: true
  ssh-authorized-keys:
    - 

## Update apt database and upgrade packages on first boot
package_update: true
package_upgrade: true

## Install additional packages on first boot
packages:
- ansible

## Run arbitrary commands at rc.local like time
runcmd:
  # Run Ansible play
  - 'sudo ansible-pull -U https://github.com/psu-epl/epl-badge-access.git -i inventory.yml provision.yml > /var/log/ansible-provision.run 2>&1'

powerstate:
  delay: "+5"
  mode: reboot

write_files:
- content: |
    DATABASE_PASSWORD=
    SESSION_SECRET=
    JWT_SECRET=
  path: /etc/labpass/passwords
  permissions: '0600'

- content: |
    {
    	"auths": {
    		"gitlab.cecs.pdx.edu:5050": {
    			"auth": ""
    		}
    	}
    }
  path: /root/.docker/config.json
runcmd:
- [ "sh", "-c", "chmod 0700 /etc/labpass" ]
